<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryBoyLogin"
    android:orientation="vertical">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/driver"
        android:layout_marginTop="10dp"
        android:id="@+id/imageDelivery">
    </ImageView>

   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"> -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/cardViewUserLogin"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:layout_marginTop="30dp">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etTruckNo"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
            android:hint="Truck No"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Password"
            android:hint="Password"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:layout_marginTop="50dp"
            android:inputType="numberPassword"/>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:id="@+id/btnDriverLogin"
                android:background="@drawable/loginbtn_layout">
            </Button>
        </android.support.v7.widget.CardView>
    </LinearLayout>

